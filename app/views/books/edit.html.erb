<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<%= render 'books/errors', model: f.object %>
  <div class="field">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit ' Update Book ' %>
<% end %>

<div class="navigation">
  <%= link_to "Show", book_path(@book) %></li><span> | </span><%= link_to "Back", books_path %>
</div>