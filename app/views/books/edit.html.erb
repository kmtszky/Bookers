<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f|%>
  <div class="input-form">
    <label for="book-title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="input-form">
    <label for="book-body">Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit ' Update Book ' %>
<% end %>

<div class="navigation">
  <%= link_to "Show", book_path(@book) %></li><span> | </span><%= link_to "Back", books_path %>
</div>