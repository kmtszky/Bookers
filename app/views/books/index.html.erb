<p id="notice"><%= notice %></p>

<h1><strong>Books</strong></h1>

<!--本の一覧-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr align="left">
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="pointer"><%= link_to "Show", book_path(book.id) %></td>
        <td class="pointer"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="pointer"><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿-->
<div class="new-box">
  <h2>New book</h2>

  <%= form_with model:@book, local:true do |f| %>
    <div class="input-form">
      <label for="book-title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="input-form">
      <label for="book-body">Body</label>
      <%= f.text_area :body %>
    </div>
    <%= f.submit ' Create Book ' %>

  <% end %>
</div>
