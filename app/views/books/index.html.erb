<h1><strong>Books</strong></h1>

<!--本の一覧-->
<table cellpadding="20px">
  <tr align="center">
    <th>Title</th>
    <th>Body</th>
    <th colapan="3"></th>
  </tr>
  <% @books.each do |book| %>
  <tr align="left">
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td class="pointer"><%= link_to "Show", book_path(book.id) %></td>
    <td class="pointer"><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td class="pointer">Destroy</td>
  </tr>
  <% end %>
</table>

<!--新規投稿-->
<div class="new">
  <h2>New book</h2>

  <%= form_with model:@book, local:true do |f| %>
    <div class="new-form">
      <label for="book-title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="new-form">
      <label for="book-body">Body</label>
      <%= f.text_area :body %>
    </div>
  <%= f.submit ' Create Book ' %>

  <% end %>
</div>
