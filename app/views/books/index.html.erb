<!--新規投稿-->
<div class="new">
  <h2>New book</h2>

  <%= form_with model:@book, local:true do |f| %>
    <div class="new-form">
      <label for="book-title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="new-form">
      <label for="book-body">Body</label>
      <%= f.text_area :body %>
    </div>
  <%= f.submit ' Create Book ' %>

  <% end %>
</div>
